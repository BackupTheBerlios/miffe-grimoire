   VERSION=( "1.0" )
  CATEGORY="profile perl"
 ATTRIBUTE="profile perl-module"
  HOMEPAGE="http://search.cpan.org"
       URL="http://www.cpan.org/authors/id"
       REQ="perl"
    OPT[0]="perl-module-crypt-ssleay:::for LWP https support"
    OPT[1]="perl-module-io-socket-ssl:::for interface to SSL sockets"
    OPT[2]="perl-module-HTML-Parser:::for parsing and extracting information from HTML documents."
    OPT[3]="perl-module-HTML-Tagset:::for data tables useful in parsing HTML"
    OPT[4]="perl-module-libwww:::for aplication programming interface to WWW"
    OPT[5]="perl-module-mime-base64:::for encoding and decoding of base64 strings"
    OPT[6]="perl-module-soap-lite:::for interface to the SOAP"
    OPT[7]="perl-module-uri:::for Uniform Resource Identifiers"
    OPT[8]="perl-module-XML-Parser:::for parsing XML documents"
    OPT[9]="perl-module-Geo-IPfree:::for look up of country IP addresses"
   OPT[10]="perl-module-XWhois:::for Whois client interface"
     SHORT="perl-modules provides perl modules"
  ESTIMATE="5"
    ASSUME="off"
      LONG="$SHORT"

perl_module_build()  {
  perl  Makefile.PL $1      &&
  make  "OPTIMIZE=$CFLAGS"  &&
  prepare_install           &&
  make  install
}

build()  {
  case  $SPELL  in
     perl-modules)		echo "$SPELL installed." 	;;
     perl-module-HTML-Parser)	yes   |  perl_module_build 	;;
     perl-module-libwww)	true  |  perl_module_build -n	;;
     perl-module-crypt-ssleay|					\
     perl-module-soap-lite)	true  |  perl_module_build	;;
     *)				perl_module_build		;;
  esac
}      

case  $SPELL  in
  perl-modules)		:  ;;
	     *)		unset OPT ASSUME
			CATEGORY="perl"
			ATTRIBUTE="perl-module"
			;;
esac
